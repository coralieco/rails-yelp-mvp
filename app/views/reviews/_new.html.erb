

<h1>Add a review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Add a review", class: "btn btn-danger button-custo", id: "sweetbutton" %>
<% end %>


<%= link_to "Back", restaurant_path(@restaurant) %>
